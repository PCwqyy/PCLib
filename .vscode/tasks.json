{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "GCC Build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-xc++",
				"-std=c++23",
				"-finput-charset=UTF-8",
				"-fexec-charset=gbk",
				"-I","${workspaceFolder}",
				"-s","${fileDirname}/${fileBasename}",
				"-o","${fileDirname}/${fileBasenameNoExtension}.exe",
				// "-lWs2_32"
			]
		},{
			"label": "GDB Build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-xc++",
				"-std=c++23",
				"-finput-charset=UTF-8",
				"-fexec-charset=gbk",
				"-I","${workspaceFolder}",
				"-g","${fileDirname}/${fileBasename}",
				"-o","${fileDirname}/${fileBasenameNoExtension}.exe",
				// "-lWs2_32"
			]
		}
	],
	"problemMatcher":
	[
		{
			"owner": "syntax",
			"fileLocation": [
				"autoDetect",
				"${workspaceRoot}"
			],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"severity": 4,
				"message": 5
			}
		},
		{
			"owner": "compiler",
			"fileLocation": [
				"autoDetect",
				"${workspaceRoot}"
			],
			"pattern": {
				"regexp": "^(.+\\.exe):\\s*(warning|error):\\s*(.*)$",
				"file": 1,
				"severity": 2,
				"message": 3
			}
		}
	]
	
}