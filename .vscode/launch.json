{
	"configurations": [
		{"name": "Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/${fileBasenameNoExtension}.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"miDebuggerPath": "D:/Program Files/MinGW/bin/gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{"name": "Build",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "GCC Build",
			"program": "${fileDirname}/${fileBasenameNoExtension}.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"console": "externalTerminal"
		},
		{"name": "Debug",
			"type": "cppdbg",
			"request": "launch",
			"preLaunchTask": "GDB Build",
			"program": "${fileDirname}/${fileBasenameNoExtension}.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"externalConsole": true,
			"environment": [],
			"MIMode": "gdb",
			"miDebuggerPath": "D:/Program Files/MinGW/bin/gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{"name": "Doxygen",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "cmd",
			"args": [
				"/C",
				"${workspaceRoot}/.vscode/doxybuild.bat"
			],
			"cwd": "${workspaceRoot}"
		}
	]
}